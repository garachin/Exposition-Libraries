<phpunit
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="true"
    syntaxCheck="true"
    bootstrap="./TestHelper.php">

    <testsuite name="Exposition Server Test Suite">
        <directory>./</directory>
    </testsuite>

    <logging>
        <log type="coverage-html" target="../data/logs/phpunitreport/" charset="UTF-8"
              yui="true" highlight="true" lowUpperBound="50" highLowerBound="80"/>
        <log type="testdox-html" target="../data/logs/phpunitreport/testdox.html" />
    </logging>
</phpunit>



